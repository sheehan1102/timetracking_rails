<% button_name = project.persisted? ? "Edit project" : "Create project" %>

<%= form_for project do |f| %>
	<%= f.label :title, value: "Title:" %>
	<%= f.text_field :title %>
	<%= f.label :description, value: "Description:" %>
	<%= f.text_area :description %>
	<%= f.label :priority, value: "Priority:" %>
	<%= f.number_field :priority %>
	<%= f.submit button_name %>
<% end %>