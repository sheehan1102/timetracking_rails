<h3>Edit entry:</h3>

<% if flash[:errors].present? %>
	<ul>
		<% flash[:errors].each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @entry do |f| %>
	<%= f.number_field :hours %>
	<%= f.number_field :minutes %>
	<%= f.date_field :date %>
	<%= f.text_area :comment %>

	<%= f.submit "Change my hours" %>
<% end %>